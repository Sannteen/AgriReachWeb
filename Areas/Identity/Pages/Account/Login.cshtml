@page
@using AgriReachWeb.Pages.Account.LoginModel
@model UsersLogin

@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-5">
                    <h2 class="fw-bold mb-2">Welcome Back!</h2>
                    <p class="mb-0 opacity-90 fs-5">Sign in to your AgriReach account</p>
                </div>

                <div class="card-body p-5">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <strong>Error:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="you@example.com" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Password</label>
                            <div class="input-group input-group-lg">
                                <input asp-for="Password" type="password" class="form-control" required />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePass(this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 fw-bold shadow">
                            Sign In
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Don't have an account?
                            <a asp-page="/Account/Register" class="text-success fw-bold">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePass(btn) {
            const input = btn.previousElementSibling;
            if (input.type === 'password') {
                input.type = 'text';
                btn.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                input.type = 'password';
                btn.innerHTML = '<i class="fas fa-eye"></i>';
            }
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}
