@page
@model AgriReachWeb.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-5">
                    <h2 class="fw-bold mb-2">Join AgriReach</h2>
                    <p class="mb-0 opacity-90 fs-5">Register as a Customer or Farmer</p>
                </div>

                <div class="card-body p-5">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <strong>Please fix the errors below:</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <ul class="mt-2 mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post">
                        <!-- Full Name -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Full Name *</label>
                            <input asp-for="User.FullName" class="form-control form-control-lg" placeholder="John Smith" required />
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email *</label>
                            <input asp-for="User.Email" type="email" class="form-control form-control-lg" required />
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Phone Number <small class="text-muted">(optional)</small></label>
                            <input asp-for="User.PhoneNumber" class="form-control form-control-lg" />
                        </div>

                        <!-- Role Dropdown -->
                        <div class="mb-4">
                            <label class="form-label fw-bold text-success">I am registering as *</label>
                            <select asp-for="User.Role" class="form-select form-select-lg" id="roleSelect">
                                <option value="Buyer">Customer</option>
                                <option value="Farmer">Farmer</option>
                            </select>
                        </div>

                        <!-- Farmer Fields (shown only when Farmer selected) -->
                        <div id="farmerSection" style="display: none;">
                            <hr class="my-4">
                            <h5 class="text-success mb-3">Farm Information</h5>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Farm Name *</label>
                                    <input asp-for="Farm.FarmName" class="form-control" placeholder="e.g. Sunshine Farm" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address / Parish *</label>
                                    <input asp-for="Farm.Address" class="form-control" placeholder="e.g. St. Elizabeth" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Description (optional)</label>
                                    <textarea asp-for="Farm.Description" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Passwords -->
                        <div class="row g-3 mt-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Password *</label>
                                <div class="input-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" required />
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePass(this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Confirm Password *</label>
                                <div class="input-group">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" required />
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePass(this)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 mt-4 fw-bold shadow">
                            Create Account
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Already have an account?
                            <a asp-page="/Account/Login" class="text-success fw-bold">Sign in here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const roleSelect = document.getElementById('roleSelect');
        const farmerSection = document.getElementById('farmerSection');

        function toggleFarmer() {
            farmerSection.style.display = roleSelect.value === 'Farmer' ? 'block' : 'none';
        }

        roleSelect.addEventListener('change', toggleFarmer);
        toggleFarmer(); // initial

        function togglePass(btn) {
            const input = btn.previousElementSibling;
            if (input.type === 'password') {
                input.type = 'text';
                btn.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                input.type = 'password';
                btn.innerHTML = '<i class="fas fa-eye"></i>';
            }
        }
    </script>
}