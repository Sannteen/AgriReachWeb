 @{
    ViewData["Title"] = "FarmerDashboard";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Farm Dashboard – Inbox</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background-color: #f4f6f9;
        }

        .container {
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        /* Dashboard Cards */
        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .card {
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            text-align: center;
        }

            .card h2 {
                font-size: 18px;
                margin-bottom: 10px;
                color: #555;
            }

            .card p {
                font-size: 28px;
                font-weight: bold;
                margin: 0;
                color: #2c7be5;
            }

        /* Inbox */
        .inbox {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .inbox-header {
            padding: 15px 20px;
            font-size: 20px;
            font-weight: bold;
            background-color: #2c7be5;
            color: white;
        }

        .email {
            display: grid;
            grid-template-columns: 200px 1fr 100px;
            gap: 10px;
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            cursor: pointer;
        }

            .email:hover {
                background-color: #f1f5ff;
            }

            .email.unread {
                background-color: #eef4ff;
                font-weight: bold;
            }

        .sender {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .subject {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .time {
            text-align: right;
            color: #888;
            font-size: 14px;
        }

        media (max-width: 600px) {
            .email {
                grid-template-columns: 1fr;
            }

            .time {
                text-align: left;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Farm Management Dashboard</h1>

        <!-- Summary Cards -->
        <div class="cards">
            <div class="card">
                <h2>Total Farm Produce</h2>
                <p>1,250</p>
            </div>
            <div class="card">
                <h2>Total Messages</h2>
                <p>320</p>
            </div>
            <div class="card">
                <h2>Total Sales</h2>
                <p>540</p>
            </div>
            <div class="card">
                <h2>Total Revenue</h2>
                <p>$48,600</p>
            </div>
        </div>

        <!-- Email Inbox -->
        <div class="inbox">
            <div class="inbox-header">Inbox</div>

            <div class="email unread" onclick="markRead(this)">
                <div class="sender">Agro Supplier Ltd</div>
                <div class="subject">Delivery confirmation for maize seeds</div>
                <div class="time">10:45 AM</div>
            </div>

            <div class="email unread" onclick="markRead(this)">
                <div class="sender">Farmers Co-op</div>
                <div class="subject">Weekly produce price update</div>
                <div class="time">9:30 AM</div>
            </div>

            <div class="email" onclick="markRead(this)">
                <div class="sender">John (Customer)</div>
                <div class="subject">Inquiry about organic tomatoes</div>
                <div class="time">Yesterday</div>
            </div>

            <div class="email" onclick="markRead(this)">
                <div class="sender">Sales Team</div>
                <div class="subject">Monthly sales performance report</div>
                <div class="time">Mon</div>
            </div>
        </div>
    </div>

    <script>
        function markRead(email) {
            email.classList.remove('unread');
        }
    </script>

</body>
</html>



