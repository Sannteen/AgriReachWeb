@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <div class="text-center my-5">
        <h1 class="display-4 text-success fw-bold">Welcome to AgriReach</h1>
        <p class="lead text-muted">Jamaica's freshest farm-to-table marketplace</p>
    </div>

    <!-- Home page cards to display products -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Sample Card 1 -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://images.unsplash.com/photo-1607305387299-a3d9611cd831?w=400"
                     class="card-img-top" style="height:220px; object-fit:cover;" alt="Scotch Bonnet">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Scotch Bonnet Peppers</h5>
                    <p class="text-success fw-bold fs-5">J$1,000 / lb</p>
                    <small class="text-muted mb-3">by Marie's Farm, St. Elizabeth</small>
                    <a href="#" class="btn btn-success mt-auto">View Details →</a>
                </div>
            </div>
        </div>

        <!-- Sample Card 2 -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://images.unsplash.com/photo-1598170845058-32b9d6a5da37?w=400"
                     class="card-img-top" style="height:220px; object-fit:cover;" alt="Sweet Potato">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Orange Sweet Potatoes</h5>
                    <p class="text-success fw-bold fs-5">J$180 / lb</p>
                    <small class="text-muted mb-3">by Green Valley Farm, Manchester</small>
                    <a href="#" class="btn btn-success mt-auto">View Details →</a>
                </div>
            </div>
        </div>

        <!-- Sample Card 3 -->
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=400"
                     class="card-img-top" style="height:220px; object-fit:cover;" alt="Pineapple">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Fresh Pineapples</h5>
                    <p class="text-success fw-bold fs-5">J$450 each</p>
                    <small class="text-muted mb-3">by Sunshine Farm, St. Ann</small>
                    <a href="#" class="btn btn-success mt-auto">View Details →</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center my-5">
        <p class="text-muted">More fresh produce coming soon...</p>
    </div>
</div>
