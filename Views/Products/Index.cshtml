@model IEnumerable<AgriReachWeb.ViewModels.ProductListVM>

@{
    ViewData["Title"] = "Products";
}

<h2 class="text-center text-success fw-bold mb-4">Products</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                
                <img src="~/images/bellpeppers.jpg" class="card-img-top" style="height:140px; object-fit:cover;" alt="@item.ProductName">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="text-success fw-bold fs-6">@item.Price.ToString("C") / @item.Unit</p>
                    <small class="text-muted mb-2">@item.FarmName</small>

                    @* Availability Status *@
                    @if (item.AvailabilityStatus == "Available")
                    {
                        <span class="badge bg-success mb-2">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary mb-2">
                            @item.AvailabilityStatus ?? "Unavailable"
                        </span>
                    }

                    @* Optional button to view details *@
                    <a href="#" class="btn btn-success mt-auto">View Details →</a>
                </div>
            </div>
        </div>
    }
</div>
