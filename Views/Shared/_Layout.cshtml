@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriReachWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- ✅ Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriReachWeb.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- LOGO / BRAND -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    AgriReachWeb
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LEFT NAV -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                       <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Products" asp-action="Index">Products</a>
                       </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle"
                               href="@Url.Action("Index", "ProductCategories")"
                               id="productCategoriesDropdown"
                               role="button">
                                Product Categories
                            </a>

                            <ul class="dropdown-menu">
                                @await Component.InvokeAsync("ProductCategoryMenu")
                            </ul>
                        </li>



                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" data-bs-toggle="dropdown">
                                Farm
                            </a>
                            @await Component.InvokeAsync("FarmMenu")
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" data-bs-toggle="dropdown">
                                Location
                            </a>
                            @await Component.InvokeAsync("LocationMenu")
                        </li>
                    </ul>

                    <!-- RIGHT NAV -->
                    <ul class="navbar-nav ms-auto d-flex align-items-center gap-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var roles = await UserManager.GetRolesAsync(user);

                            if (roles.Contains("Customer"))
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-light">
                                        Welcome, @user.UserName
                                    </span>
                                </li>
                            }

                            <!-- SHOPPING BAG -->
                            <li class="nav-item position-relative">
                                <a class="nav-link text-light" asp-controller="ShoppingBag" asp-action="Index">
                                    <i class="bi bi-bag-fill fs-4"></i>
                                    <span id="bagCount"
                                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        0
                                    </span>
                                </a>
                            </li>

                            <!-- LOGOUT -->
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm"
                                   asp-controller="Account"
                                   asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <partial name="_LoginPartial" />
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="agrireach-footer mt-5">
        <div class="container py-5">
            <div class="row gy-4">

                <!-- Brand -->
                <div class="col-md-4">
                    <h4 class="fw-bold mb-3">AgriReach</h4>
                    <p class="small opacity-75">
                        Bridging the gap between farmers and buyers by providing
                        access to fresh, locally grown agricultural products.
                    </p>
                </div>

                <!-- Explore -->
                <div class="col-md-2">
                    <h6 class="text-uppercase fw-semibold mb-3">Explore</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="ProductCategories" asp-action="Index">Categories</a>
                        </li>
                    </ul>
                </div>

                <!-- Support -->
                <div class="col-md-3">
                    <h6 class="text-uppercase fw-semibold mb-3">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                        <li class="mb-2">
                            <a href="#">FAQs</a>
                        </li>
                        <li class="mb-2">
                            <a href="#">Privacy Policy</a>
                        </li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-3">
                    <h6 class="text-uppercase fw-semibold mb-3">Get in Touch</h6>
                    <p class="small mb-2">
                        <i class="fas fa-envelope me-2"></i> support@agrireach.com
                    </p>
                    <p class="small mb-2">
                        <i class="fas fa-phone me-2"></i> +1 (876) 555-1234
                    </p>
                    <p class="small">
                        <i class="fas fa-map-marker-alt me-2"></i> Jamaica
                    </p>
                </div>

            </div>

            <hr class="border-light opacity-25 my-4">

            <!-- Bottom bar -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center small opacity-75">
                <span>
                    © @DateTime.Now.Year AgriReach. All rights reserved.
                </span>

                <div class="mt-3 mt-md-0">
                    <a href="#" class="me-3 social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="me-3 social-icon">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>



