@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var session = HttpContextAccessor.HttpContext.Session;
    var role = session.GetString("Role");
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (role == "Buyer") // HomeUser
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="HomeUser">
                    Hello @session.GetString("FullName")!
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                    <i class="fas fa-shopping-bag"></i> Cart
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Messages" asp-action="Inbox">
                    <i class="fas fa-envelope"></i> Messages
                </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <!-- Farmer logic -->
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="FarmerDashboard">
                    Hello @session.GetString("FullName")!
                </a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
